(
    :name helm
    :type github
    :pkgname "emacs-helm/helm"
    :features helm
    :after ( progn
        (global-set-key (kbd "M-x") 'helm-M-x)
        (global-set-key (kbd "<f8>") 'helm-find-files)
        (global-set-key (kbd "<f7>") 'helm-buffers-list)
        (global-set-key (kbd "<f6>") 'helm-imenu)
    )
)